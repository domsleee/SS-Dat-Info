{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "display-config",
  "version": "0.3.5",
  "identifier": "com.display-config.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Supreme Snowboarding Config {{current_version}}",
        "label": "main",
        "visible": true,
        "backgroundColor": "#121212",
        "windowEffects": {
          "effects": ["micaLight"]
        },
        "width": 400,
        "height": 660
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}